{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
      {
        "name": "fastapi-app",
        "image": "mika123/minha-receita-api:latest",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "portMappings": [
          {
            "containerPort": 8000
          }
        ],
        "environment": [
          {
            "name": "DATABASE_URL",
            "value": "postgresql+psycopg2://postgres:344421064@minha-receita-db.cpquki066n1r.sa-east-1.rds.amazonaws.com:5432/minha_receita_db"
          },
          {
            "name": "MEILI_URL",
            "value": "http://meilisearch:7700"
          },
          {
            "name": "MEILI_MASTER_KEY",
            "value": "3444"
          }
        ],
        "dependsOn": [
          {
            "containerName": "meilisearch",
            "condition": "START"
          }
        ]
      },
      {
        "name": "meilisearch",
        "image": "getmeili/meilisearch:v1.6",
        "essential": true,
        "memory": 512,
        "cpu": 256,
        "portMappings": [
          {
            "containerPort": 7700
          }
        ],
        "environment": [
          {
            "name": "MEILI_MASTER_KEY",
            "value": "3444"
          }
        ],
        "mountPoints": [
          {
            "sourceVolume": "meili_data",
            "containerPath": "/meili_data"
          }
        ],
        "healthCheck": {
          "command": ["CMD-SHELL", "curl -f http://localhost:7700/health || exit 1"],
          "interval": 10,
          "timeout": 5,
          "retries": 5,
          "startPeriod": 10
        }
      }
    ],
    "volumes": [
      {
        "name": "meili_data",
        "host": {
          "sourcePath": "/var/app/current/meili_data"
        }
      }
    ]
  }
  